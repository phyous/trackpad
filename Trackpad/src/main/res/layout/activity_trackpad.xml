<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".TrackpadActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/app_settings"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingLeft="16dp"
                  android:paddingRight="16dp"
                  android:paddingBottom="16dp"
                  android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/x_pos_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26sp"
                    android:text="@string/x_pos_tag"/>
            <TextView
                    android:id="@+id/x_pos_initial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/x_pos_tag"
                    android:paddingLeft="5dp"
                    android:textSize="26sp"
                    android:text="@string/x_pos_initial"/>
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/y_pos_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26sp"
                    android:text="@string/y_pos_tag"/>
            <TextView
                    android:id="@+id/y_pos_initial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/y_pos_tag"
                    android:paddingLeft="5dp"
                    android:textSize="26sp"
                    android:text="@string/y_pos_initial"/>
        </RelativeLayout>

    </LinearLayout>

    <ImageView
            android:id="@+id/trackpad"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/trackpad_resource" />


</RelativeLayout>
